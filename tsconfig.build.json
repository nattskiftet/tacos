{
	"compilerOptions": {
		"lib": ["es2022", "es7", "es6", "dom"],
		"allowJs": true,
		"target": "es6",
		"strict": true,
		"module": "commonjs",
		"noEmit": false,
		"skipLibCheck": true,
		"jsx": "react",
		"declaration": true,
		"esModuleInterop": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["components/**/*.ts", "components/**/*.tsx", "utilities/**/*.ts"]
}
